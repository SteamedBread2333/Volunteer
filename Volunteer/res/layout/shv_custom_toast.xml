<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_contentbg"
    android:paddingLeft="@dimen/toast_horizontal_padding"
    android:paddingRight="@dimen/toast_horizontal_padding"
    android:paddingTop="@dimen/toast_vertical_padding"
    android:paddingBottom="@dimen/toast_vertical_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/toast_txt_info"
        style="@style/text_white_14"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>