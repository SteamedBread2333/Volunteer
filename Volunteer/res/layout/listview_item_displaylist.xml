<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/box_dispaly_contentbg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/intro"
            style="@style/text_gray_10"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:maxLines="2"
            android:padding="5dp"
            android:text="@string/about_us_intro1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/t_light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nice"
                style="@style/text_gray_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/nice"
                android:gravity="center"
                android:text="123" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/t_light_gray" />
            <!--
                 <TextView
                android:id="@+id/bad"
                style="@style/text_gray_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/bad"
                android:gravity="center"
                android:text="123" />
            -->

            <TextView
                android:id="@+id/command"
                style="@style/text_gray_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/command"
                android:gravity="center"
                android:text="123" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>